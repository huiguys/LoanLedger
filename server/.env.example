# Server Configuration
PORT=3001
NODE_ENV=development

# Frontend URL for CORS
FRONTEND_URL=http://localhost:5173

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Database Configuration
DATABASE_PATH=./database/auth.db

# SMS Service Configuration (for production)
SMS_API_KEY=your-sms-service-api-key
SMS_API_URL=https://api.sms-service.com/send
SMS_SENDER_ID=LOANAPP

# Rate Limiting Configuration
OTP_RATE_LIMIT_WINDOW=15
OTP_RATE_LIMIT_MAX=3
LOGIN_RATE_LIMIT_WINDOW=15
LOGIN_RATE_LIMIT_MAX=5

# Security Configuration
BCRYPT_SALT_ROUNDS=12
OTP_EXPIRY_MINUTES=5
OTP_MAX_ATTEMPTS=3